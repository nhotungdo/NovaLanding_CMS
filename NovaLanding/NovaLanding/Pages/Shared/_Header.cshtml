<!-- Unified Header - Modern CMS Design (Notion/Vercel/Webflow/Ghost Style) -->
<header class="unified-header">
    <div class="header-container">
        <!-- Left Section: Mobile Menu + Logo + Breadcrumb -->
        <div class="header-left">
            <!-- Mobile Menu Button -->
            <button class="mobile-menu-btn" onclick="toggleSidebar()" aria-label="Toggle menu">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
            </button>
            
            <!-- Logo & Brand Identity -->
            <a href="/dashboard" class="header-logo">
                <div class="logo-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <span class="logo-text">NovaLanding</span>
            </a>
            
            <!-- Breadcrumb Navigation (Desktop) -->
            <nav class="header-breadcrumb desktop-only" id="headerBreadcrumb">
                <!-- Dynamically populated by JavaScript -->
            </nav>
        </div>
        
        <!-- Center Section: Search Bar -->
        <div class="header-center">
            <div class="header-search">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="search-icon">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                </svg>
                <input type="text" 
                       placeholder="Search pages, media, settings..." 
                       id="globalSearch"
                       aria-label="Global search">
                <kbd class="search-shortcut desktop-only">âŒ˜K</kbd>
            </div>
        </div>
        
        <!-- Right Section: Actions + User Menu -->
        <div class="header-right">
            <!-- Quick Actions -->
            <div class="header-actions">
                <!-- Create New Button -->
                <button class="action-btn btn-primary desktop-only" onclick="showCreateMenu()" aria-label="Create new">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                    <span>New</span>
                </button>
                
                <!-- Notifications -->
                <button class="action-btn" onclick="toggleNotifications()" aria-label="Notifications" title="Notifications">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
                    </svg>
                    <span class="notification-badge" id="notificationBadge" style="display: none;"></span>
                </button>
                
                <!-- Help -->
                <button class="action-btn desktop-only" onclick="toggleHelp()" aria-label="Help" title="Help & Support">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z" />
                    </svg>
                </button>
                
                <!-- Language Selector -->
                <div class="language-selector desktop-only">
                    <button class="action-btn" onclick="toggleLanguageMenu()" aria-label="Change language" title="Language">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m10.5 21 5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 0 1 6-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 0 1-3.827-5.802" />
                        </svg>
                        <span id="currentLanguage">EN</span>
                    </button>
                </div>
            </div>
            
            <!-- User Menu -->
            <div class="user-menu" onclick="toggleUserMenu()">
                <div class="user-avatar">
                    <span id="headerUserInitials">U</span>
                </div>
                <div class="user-info desktop-only">
                    <div class="user-name" id="headerUserName">User</div>
                    <div class="user-role" id="headerUserRole">User</div>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="chevron-icon">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                </svg>
            </div>
        </div>
    </div>
</header>

