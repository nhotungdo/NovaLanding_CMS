@model List<(string Name, string Url)>

@if (Model != null && Model.Any())
{
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="/dashboard" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-primary">
                    <i class="fas fa-home mr-2"></i>
                    Home
                </a>
            </li>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                var isLast = i == Model.Count - 1;
                
                <li>
                    <div class="flex items-center">
                        <i class="fas fa-chevron-right text-gray-400 text-xs"></i>
                        @if (isLast)
                        {
                            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">@item.Name</span>
                        }
                        else
                        {
                            <a href="@item.Url" class="ml-1 text-sm font-medium text-gray-700 hover:text-primary md:ml-2">@item.Name</a>
                        }
                    </div>
                </li>
            }
        </ol>
    </nav>
}
