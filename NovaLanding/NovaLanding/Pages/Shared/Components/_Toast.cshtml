<!-- Toast Component Template (Used by JavaScript) -->
<template id="toast-template">
    <div class="toast-item flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow-lg" role="alert">
        <div class="toast-icon inline-flex items-center justify-center flex-shrink-0 w-8 h-8 rounded-lg">
            <i class="toast-icon-class"></i>
        </div>
        <div class="ml-3 text-sm font-normal toast-message"></div>
        <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex h-8 w-8" data-dismiss-toast>
            <span class="sr-only">Close</span>
            <i class="fas fa-times"></i>
        </button>
    </div>
</template>
