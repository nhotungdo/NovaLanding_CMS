@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Home";
    ViewData["Description"] = "NovaLanding - Build stunning landing pages with our modern CMS platform";
    Layout = "_PublicLayout";
}

<!-- Navigation -->
<nav class="home-nav">
    <div class="container">
        <div class="nav-content">
            <div class="nav-logo">
                <i class="fas fa-rocket"></i>
                <span>NovaLanding</span>
            </div>
            <div class="nav-menu" id="navMenu">
                <a href="#features" class="nav-link">Features</a>
                <a href="#about" class="nav-link">About</a>
                <a href="#pricing" class="nav-link">Pricing</a>
                <a href="#contact" class="nav-link">Contact</a>
            </div>
            <div class="nav-actions">
                <a href="/Auth/Login" class="btn btn-secondary btn-sm">Login</a>
                <a href="/Auth/Register" class="btn btn-primary btn-sm">Get Started</a>
            </div>
            <button class="mobile-menu-toggle" id="mobileMenuToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </div>
    </nav>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Build Stunning Landing Pages in Minutes</h1>
            <p class="hero-subtitle">
                NovaLanding is a modern CMS platform that helps you create beautiful, 
                high-converting landing pages without any coding knowledge.
            </p>
            <div class="hero-actions">
                <a href="/Auth/Register" class="btn btn-primary btn-lg">
                    <i class="fas fa-rocket"></i>
                    Start Free Trial
                </a>
                <a href="#features" class="btn btn-secondary btn-lg">
                    <i class="fas fa-play-circle"></i>
                    Watch Demo
                </a>
            </div>
            <div class="hero-stats">
                <div class="stat-item">
                    <div class="stat-value">10K+</div>
                    <div class="stat-label">Active Users</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">50K+</div>
                    <div class="stat-label">Pages Created</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">99.9%</div>
                    <div class="stat-label">Uptime</div>
                </div>
            </div>
        </div>
        <div class="hero-image">
            <div class="hero-image-placeholder">
                <i class="fas fa-desktop"></i>
            </div>
        </div>
    </div>
    </section>

<!-- Features Section -->
<section class="features-section" id="features">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Powerful Features</h2>
            <p class="section-subtitle">Everything you need to create amazing landing pages</p>
        </div>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-paint-brush"></i>
                </div>
                <h3 class="feature-title">Drag & Drop Builder</h3>
                <p class="feature-description">
                    Create pages visually with our intuitive drag-and-drop interface. 
                    No coding required.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h3 class="feature-title">Responsive Design</h3>
                <p class="feature-description">
                    All pages are fully responsive and look great on any device, 
                    from mobile to desktop.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3 class="feature-title">Lightning Fast</h3>
                <p class="feature-description">
                    Optimized for speed with caching and CDN integration for 
                    blazing-fast page loads.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3 class="feature-title">Analytics Dashboard</h3>
                <p class="feature-description">
                    Track your page performance with built-in analytics and 
                    conversion tracking.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3 class="feature-title">Secure & Reliable</h3>
                <p class="feature-description">
                    Enterprise-grade security with SSL, backups, and 99.9% uptime 
                    guarantee.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-puzzle-piece"></i>
                </div>
                <h3 class="feature-title">Integrations</h3>
                <p class="feature-description">
                    Connect with your favorite tools including email marketing, 
                    CRM, and more.
                </p>
            </div>
        </div>
    </div>
    </section>

<!-- About Section -->
<section class="about-section" id="about">
    <div class="container">
        <div class="about-content">
            <div class="about-text">
                <h2 class="section-title">Why Choose NovaLanding?</h2>
                <p class="about-description">
                    NovaLanding is built by marketers, for marketers. We understand the 
                    challenges of creating high-converting landing pages and have designed 
                    our platform to make it as easy as possible.
                </p>
                <ul class="about-list">
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>No technical skills required</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>Professional templates included</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>SEO optimized out of the box</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>24/7 customer support</span>
                    </li>
                </ul>
                <a href="/Auth/Register" class="btn btn-primary">Get Started Now</a>
            </div>
            <div class="about-image">
                <div class="about-image-placeholder">
                    <i class="fas fa-chart-bar"></i>
                </div>
            </div>
        </div>
    </div>
    </section>

<!-- Pricing Section -->
<section class="pricing-section" id="pricing">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Simple, Transparent Pricing</h2>
            <p class="section-subtitle">Choose the plan that's right for you</p>
        </div>
        <div class="pricing-grid">
            <div class="pricing-card">
                <div class="pricing-header">
                    <h3 class="pricing-name">Starter</h3>
                    <div class="pricing-price">
                        <span class="price-currency">$</span>
