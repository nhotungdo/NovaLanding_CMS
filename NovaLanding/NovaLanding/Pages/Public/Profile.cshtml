@page "/Profile"
@model NovaLanding.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="mb-4">My Profile</h2>
                    
                    <div id="errorMessage" class="alert alert-danger d-none"></div>
                    <div id="successMessage" class="alert alert-success d-none"></div>
                    
                    <div class="mb-4">
                        <h5>Account Information</h5>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Email:</strong></div>
                            <div class="col-md-8" id="userEmail"></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Role:</strong></div>
                            <div class="col-md-8"><span id="userRole" class="badge bg-primary"></span></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Member Since:</strong></div>
                            <div class="col-md-8" id="memberSince"></div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <form id="profileForm">
                        <h5 class="mb-3">Update Profile</h5>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" minlength="6">
                        </div>
                        <button type="submit" class="btn btn-primary">Update Profile</button>
                    </form>
                    
                    <hr>
                    
                    <div class="mb-4">
                        <h5 class="mb-3">Telegram Integration</h5>
                        <div id="telegramStatus" class="mb-3"></div>
                        <div id="telegramLinkForm" class="d-none">
                            <p>To link your Telegram account:</p>
                            <ol>
                                <li>Open Telegram and search for your bot</li>
                                <li>Send the command <code>/start</code></li>
                                <li>Copy your Chat ID and paste it below</li>
                            </ol>
                            <div class="input-group mb-3">
                                <input type="number" class="form-control" id="telegramChatId" placeholder="Enter Telegram Chat ID">
                                <button class="btn btn-success" onclick="linkTelegram()">Link Telegram</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        const token = localStorage.getItem('token');
        
        if (!token) {
            window.location.href = '/Auth/Login';
        }
        
        async function loadProfile() {
            try {
                const response = await fetch('/api/auth/profile', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (!response.ok) {
                    window.location.href = '/Auth/Login';
                    return;
                }
                
                const profile = await response.json();
                
                document.getElementById('userEmail').textContent = profile.email;
                document.getElementById('userRole').textContent = profile.role;
                document.getElementById('username').value = profile.username;
                document.getElementById('memberSince').textContent = new Date(profile.createdAt).toLocaleDateString();
                
                if (profile.telegramChatId) {
                    document.getElementById('telegramStatus').innerHTML = 
                        `<div class="alert alert-success">âœ“ Telegram linked (Chat ID: ${profile.telegramChatId})</div>`;
                } else {
                    document.getElementById('telegramStatus').innerHTML = 
                        '<div class="alert alert-warning">Telegram not linked</div>';
                    document.getElementById('telegramLinkForm').classList.remove('d-none');
                }
            } catch (error) {
                document.getElementById('errorMessage').classList.remove('d-none');
                document.getElementById('errorMessage').textContent = 'Failed to load profile';
            }
        }
        
        async function linkTelegram() {
            const chatId = document.getElementById('telegramChatId').value;
            if (!chatId) return;
            
            try {
                const response = await fetch('/api/auth/link-telegram', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ telegramChatId: parseInt(chatId) })
                });
                
                if (response.ok) {
                    document.getElementById('successMessage').classList.remove('d-none');
                    document.getElementById('successMessage').textContent = 'Telegram linked successfully';
                    await loadProfile();
                } else {
                    document.getElementById('errorMessage').classList.remove('d-none');
                    document.getElementById('errorMessage').textContent = 'Failed to link Telegram';
                }
            } catch (error) {
                document.getElementById('errorMessage').classList.remove('d-none');
                document.getElementById('errorMessage').textContent = 'An error occurred';
            }
        }
        
        loadProfile();
    </script>
}
